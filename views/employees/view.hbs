<table class="table table-secondary mt-5">
    <tr>
        <th colspan="2" class="text-center h1 text-primary">Employee Details</th>
    </tr>
    <tr>
        <th>Name</th>
        <td>{{ employees.name }}</td>
    </tr>
    <tr>
        <th>Gender</th>
        <td>{{ employees.gender }}</td>
    </tr>
    <tr>
        <th>DOB</th>
        <td>{{ dateFormat employees.dob "DD/MM/YYYY" }}</td>
    </tr>
    <tr>
        <th>Position</th>
        <td>{{ employees.position }}</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>{{ employees.email }}</td>
    </tr>
    <tr>
        <th>Introduction</th>
        <td>{{ employees.introduction }}</td>
    </tr>
</table>